<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:padding="@dimen/regular_margin">

    <RelativeLayout
        android:layout_width="@dimen/item_default_image_size"
        android:layout_height="@dimen/item_default_image_size">

        <ImageView
            android:id="@+id/viewholder_item_image"
            android:layout_width="@dimen/item_default_image_size"
            android:layout_height="@dimen/item_default_image_size"/>

        <ProgressBar
            android:id="@+id/viewholder_item_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </LinearLayout>
</LinearLayout>